@model LVVWDWebGoat.Pages.A06OutdatedJQueryModel
@{
}

<div class="row text-center">

    <h2>This is the A06 vulnerability</h2>
    <br />
    <br />
    <h4>JQuery 2.0.0 is used to copy to the clipboard. You can then paste what was copied in the text box below.</h4>
    <br />
    <br />


    <!-- Code Below was copied from https://stackoverflow.com/questions/22581345/click-button-copy-to-clipboard-->

    <p id="p1">P1: I am paragraph 1</p>
    <p id="p2">P2: I am a second paragraph</p>
    <button onclick="copyToClipboard('#p1')">Copy P1</button>
    <button onclick="copyToClipboard('#p2')">Copy P2</button>
    <br /><br /><input type="text" placeholder="Paste here for test" />
</div>

<script>
        function copyToClipboard(element) {
      var $temp = $("<input>");
      $("body").append($temp);
      $temp.val($(element).text()).select();
      document.execCommand("copy");
      $temp.remove();
    }

</script>
