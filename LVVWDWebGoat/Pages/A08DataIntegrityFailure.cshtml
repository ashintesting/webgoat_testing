@page
@model LVVWDWebGoat.Pages.A08DataIntegrityFailureModel
@{
}
<h2>A08 Software and Data Integrity Failures</h2>
<p>A08 demonstrates a data integrity issue by allowing the end user to enter values
    for a JSON request and echoes it back out and doesn't perform any validation.
    Without validation, neither the back-end, nor the front-end can trust the
    integrity of the data.
</p>
<form method="post">
    POST input (JSON): <br />
    <textarea name="PayLoad" rows="4" cols="50">
        @ViewData["PayLoad"]
    </textarea>
    <input type="Submit"/>
</form>

@if (Model.MessageReceived != "") {
    <p>Here's a copy of what you sent:</p>
    var obj = Newtonsoft.Json.JsonConvert.DeserializeObject(@Model.MessageReceived);
    <br />@obj
}